<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/strong_magenta"/>
            <corners
                android:topLeftRadius="100dp"
                android:bottomLeftRadius="100dp"/>
            <stroke
                android:width="@dimen/border_button"
                android:color="@color/very_dark_violet"/>
            <padding
                android:top="15dp"
                android:bottom="15dp"/>
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/purple_700"/>
            <corners
                android:topLeftRadius="100dp"
                android:bottomLeftRadius="100dp"/>
            <stroke
                android:width="@dimen/border_button"
                android:color="@color/black"/>
            <padding
                android:top="15dp"
                android:bottom="15dp"/>
        </shape>
    </item>


</selector>